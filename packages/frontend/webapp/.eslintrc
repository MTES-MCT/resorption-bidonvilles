{
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "@vue/prettier",
        "plugin:import/recommended"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "App": "readonly",
        "turf": "readonly"
    },
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "*.min.js"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "#helpers",
                        "./src/js/helpers"
                    ],
                    [
                        "#matomo",
                        "./src/js/matomo"
                    ],
                    [
                        "#app",
                        "./src/js/app"
                    ],
                    [
                        "#src",
                        "./src"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".json",
                    ".vue"
                ]
            }
        }
    },
    "overrides": [
        {
            "files": [
                "cypress/**/*.js",
                "src/**/__tests__/*.js"
            ],
            "globals": {
                "Cypress": "readonly",
                "cy": "readonly",
                "describe": "readonly",
                "it": "readonly",
                "expect": "readonly"
            }
        }
    ]
}