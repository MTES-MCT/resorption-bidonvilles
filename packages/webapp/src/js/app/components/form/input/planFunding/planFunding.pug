<div class="planFunding">
    <header class="planFunding-header">
        <font-awesome-icon icon="caret-square-left" @click="showPreviousYear" class="planFunding-yearSwitch" v-bind:class="{ 'planFunding-yearSwitch--disabled': this.focusedYear === this.minYear }"></font-awesome-icon>
        <span>{{ focusedYear }} </span>
        <font-awesome-icon icon="caret-square-right" @click="showNextYear" class="planFunding-yearSwitch" v-bind:class="{ 'planFunding-yearSwitch--disabled': this.focusedYear === this.maxYear }"></font-awesome-icon>
    </header>

    <table class="table">
        <thead>
            <tr>
                <th class="planFunding-type">Type de financements</th>
                <th class="planFunding-amount">Montants<br/>Prévus</th>
                <th class="planFunding-details">Précision</th>
                <th class="planFunding-details">Dépenses<br/>exécutées</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <PlanFundingRow v-for="(funding, index) in currentFundings" :index="index" :key="index" :inputMode="inputMode" :relatedYear="focusedYear" v-model="funding.data" @onremove="removeRow(index)" @input="onRowChange" :disabled="disabled"></PlanFundingRow>
            <tr v-if="inputMode === 'default'">
                <td colspan="5" @click="addRow" class="planFunding-addRow" v-bind:class="{ 'planFunding-addRow--disabled': disabled }">Ajouter une ligne de financement</td>
            </tr>
        </tbody>
    </table>
</div>
