{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "#server/*": [
                "./server/*"
            ],
            "#db/*": [
                "./db/*"
            ],
            "#fixtures/*": [
                "./test/fixtures/*"
            ],
            "#test/*": [
                "./test/*"
            ],
            "#common/*": [
                "../frontend/common/*"
            ],
            "#root/*": [
                "./*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}