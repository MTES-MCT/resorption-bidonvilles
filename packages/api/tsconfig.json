{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "#server/*": [
                "server/*"
            ],
            "#db/*": [
                "db/*"
            ],
            "#root/*": [
                "*"
            ],
            "#test/*": [
                "test/*"
            ]
        },
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "db/**/*.js",
        "db/**/*.ts",
        "server/**/*.ts",
        "test/**/*.ts"
    ]
}