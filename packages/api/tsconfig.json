{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "#server/*": [
                "server/*"
            ],
            "#db/*": [
                "db/*"
            ],
            "#root/*": [
                "*"
            ],
            "#test/*": [
                "test/*"
            ],
            "#types/*": [
                "types/*"
            ]
        },
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}