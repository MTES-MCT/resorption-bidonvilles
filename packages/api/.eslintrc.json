{
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "mocha": true
    },
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "error",
        "@typescript-eslint/naming-convention": [
            "off"
        ],
        "@typescript-eslint/no-throw-literal": "off",
        "import/no-extraneous-dependencies": 2,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never",
            }
        ],
        "prefer-promise-reject-errors": 0,
        "max-len": "off",
        "camelcase": "off",
        "curly": [
            "error",
            "all"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            },
            "alias": {
                "map": [
                    [
                        "#server",
                        "./server"
                    ],
                    [
                        "#db",
                        "./db"
                    ],
                    [
                        "#fixtures",
                        "./test/fixtures"
                    ],
                    [
                        "#test",
                        "./test"
                    ],
                    [
                        "#common",
                        "../frontend/common"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    },
    "overrides": [
        {
            "files": [
                "test/**/*.spec.js",
                "server/**/*.spec.js",
                "test/**/*.spec.ts",
                "server/**/*.spec.ts"
            ],
            "rules": {
                "no-unused-expressions": "off",
                "@typescript-eslint/no-unused-expressions": "off"
            }
        }
    ]
}