{
    "extends": "airbnb-base",
    "env": {
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/no-extraneous-dependencies": false,
        "prefer-promise-reject-errors": 0,
        "max-len": "off",
        "camelcase": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "#server",
                        "./server"
                    ],
                    [
                        "#db",
                        "./db"
                    ],
                    [
                        "#fixtures",
                        "./test/fixtures"
                    ],
                    [
                        "#test",
                        "./test"
                    ]
                ],
                "extensions": [
                    ".js"
                ]
            }
        }
    },
    "overrides": [
        {
            "files": [
                "test/**/*.spec.js",
                "server/**/*.spec.js"
            ],
            "rules": {
                "no-unused-expressions": "off"
            }
        }
    ]
}